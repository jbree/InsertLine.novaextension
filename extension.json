{
    "identifier": "org.jbree.InsertLine",
    "name": "Insert Line",
    "organization": "Joshua Breeden",
    "description": "Adds hotkeys to insert a new line before or after the current line.",
    "version": "1.0",
    "categories": ["commands"],
    
    "main": "main.js",
    
    "activationEvents": [
        "onLanguage:html"
    ],

    "commands": {
        "editor": [
            {
                "title": "Insert Line Before",
                "command": "insert-line.before",
                "shortcut": "cmd-shift-return",
                "when": "editorHasFocus && !editorHasMultipleSelections"
            },
            {
                "title": "Insert Line After",
                "command": "insert-line.after",
                "shortcut": "cmd-return",
                "when": "editorHasFocus && !editorHasMultipleSelections"
            }
        ]
    }
}
